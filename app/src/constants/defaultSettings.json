    "accentColor": {
        "name": "Accent color",
        "description": "",
        "hoverDescription": "Set all accent colors for the UI",
        "section": "Theme",
        "type": "complex",
        "useSubsettings": true,
        "subsettings": {
            "accentColorGlobal": {
                "name": "Accent color",
                "description": "Changing this value will affect all other font settings in the group.",
                "hoverDescription": "Is overruled when advanced accent color settings are used",
                "section": "Theme",
                "type": "colorInput",
                "value": "#4f929e",
                "defaultValue": "#4f929e",
                "theme": {
                    "cssVar": "--clr-accent-global",
                    "isGlobal": true,
                    "controlledCss": [
                        { "cssVar": "--clr-accent-000", "coefficient": 1.5 },
                        { "cssVar": "--clr-accent-100", "coefficient": 2 }
                    ]
                }
            },
            "accentColor000": {
                "name": "Accent 000",
